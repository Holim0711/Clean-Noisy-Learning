{
    "transforms": {
        "train": [
            {"name": "RandAugment", "n": 3, "m": 5, "fillcolor": "CIFAR100"},
            {"name": "Cutout", "ratio": 0.5, "fillcolor": "CIFAR100"},
            {"name": "RandomCrop", "size": 32, "padding": 4, "padding_mode": "reflect"},
            {"name": "RandomHorizontalFlip"},
            {"name": "ToTensor"},
            {"name": "Normalize", "dataset": "CIFAR100"}
        ],
        "val": [
            {"name": "ToTensor"},
            {"name": "Normalize", "dataset": "CIFAR100"}
        ]
    },
    "model": {
        "backbone": {
            "src": "weaver",
            "name": "preact_resnet18",
            "num_classes": 100
        },
        "momentum": 0.99,
        "ema": true
    },
    "dataset": {
        "name": "CIFAR100",
        "num_clean": 1000,
        "noise_type": "symmetric",
        "noise_ratio": 0.2,
        "random_seed": 0,
        "batch_sizes": {
            "train": 128,
            "val": 128
        }
    },
    "optimizer": {
        "name": "SGD",
        "lr": 0.1,
        "momentum": 0.9,
        "weight_decay": 0.001,
        "nesterov": true
    },
    "scheduler": {
        "name": "SequentialLR",
        "schedulers": [
            {"name": "LinearLR", "start_factor": 0.2, "total_iters": 5},
            {"name": "CosineAnnealingLR", "T_max": 295}
        ],
        "milestones": [5]
    }
}